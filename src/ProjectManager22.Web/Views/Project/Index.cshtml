@model IEnumerable<ProjectManager22.Domain.Dtos.ProjectDto>

@{
    ViewData["Title"] = "ListAllProjects";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>ListAllProjects</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Manager)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EstimatedProjectEndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RealProjectEndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BudgetTotal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Manager)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EstimatedProjectEndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RealProjectEndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BudgetTotal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |

                @if (item.Status != ProjectManager22.Domain.Enums.ProjectStatusEnum.Started && item.Status != ProjectManager22.Domain.Enums.ProjectStatusEnum.InProgress && item.Status != ProjectManager22.Domain.Enums.ProjectStatusEnum.Closed)
                {
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                }


            </td>
        </tr>
}
    </tbody>
</table>
